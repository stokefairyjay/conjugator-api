{
    "compilerOptions": {
        "target" : "esnext",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "module" : "commonjs",
        "outDir": "./build",
        "baseUrl": "./src",
        "sourceMap": true,
        "esModuleInterop": true,
        "removeComments": true,
        "typeRoots" : [ "./src/types", "node_modules/@types" ]
    },
    "include" : [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}